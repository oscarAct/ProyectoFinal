
@{
    ViewBag.Title = "Carrito";
}

<link rel="stylesheet" type="text/css" href="~/vendor/fonts/iconic/css/material-design-iconic-font.min.css">

<div class="row mt-5">
    <div class="col-12 col-md-3">
        <div class="form-group">
            Fecha: <span id="fechaVenta">27/7/2020</span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre del cliente</label>
            <input type="text" class="form-control shadow" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Direccion de correo electronico</label>
            <input type="email" class="form-control shadow" id="exampleInputPassword1">
        </div>

    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table dark table-responsive">
            <thead>
                <tr>
                    <th scope="col">Foto</th>
                    <th scope="col">Eliminar</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Cantidad</th>

                </tr>
            </thead>
            <tbody id="cuerpo-carrito">
            
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    @Scripts.Render("/JavaScripts/Carrito.js")
    @Scripts.Render("/vendor/bootstrap-notify.js")
}
